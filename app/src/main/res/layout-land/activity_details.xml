<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/default_margin"
    tools:context="com.coderman202.popularmovies.DetailsActivity">

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextTitleStyle"
        android:gravity="start"
        android:paddingBottom="@dimen/details_screen_item_padding"
        android:paddingStart="@dimen/details_screen_item_padding"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/movie_rating"
        tools:text="@string/title_placeholder"/>

    <TextView
        android:id="@+id/movie_genres"
        style="@style/MovieDetailsStyle"
        android:paddingTop="2dp"
        android:gravity="start"
        android:textAppearance="@style/TextSubTextStyle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/movie_runtime"
        app:layout_constraintTop_toBottomOf="@id/movie_vote_count"
        tools:text="@string/genres_placeholder"/>

    <TextView
        android:id="@+id/movie_runtime"
        style="@style/MovieDetailsStyle"
        android:textAppearance="@style/TextSubTextStyle"
        android:gravity="end"
        android:paddingEnd="@dimen/details_screen_item_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_vote_count"
        tools:text="@string/runtime_placeholder"/>

    <TextView
        android:id="@+id/movie_rating"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextRatingStyle"
        android:gravity="end"
        android:drawableStart="@drawable/rating_star"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/movie_rating_max"
        tools:text="@string/user_rating_placeholder"/>

    <TextView
        android:id="@+id/movie_rating_max"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextSubTextStyle"
        android:paddingEnd="@dimen/details_screen_item_padding"
        android:text="@string/rating_max"
        android:gravity="end"
        app:layout_constraintBottom_toTopOf="@id/movie_vote_count"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/movie_vote_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextSubTextStyle"
        android:paddingEnd="@dimen/details_screen_item_padding"
        android:textSize="@dimen/details_screen_smaller_text_size"
        android:gravity="top|end"
        app:layout_constraintTop_toBottomOf="@id/movie_rating"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/vote_count_placeholder"/>


    <ScrollView
        android:id="@+id/movie_details_scroller"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="@dimen/details_screen_item_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_genres">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movie_backdrop_img"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/backdrop_description"
                android:padding="@dimen/details_screen_item_padding"
                tools:src="@drawable/placeholder_image"/>

            <com.coderman202.popularmovies.views.ExpandableTextView
                android:id="@+id/movie_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/details_screen_item_padding"
                android:paddingTop="@dimen/details_screen_item_padding"
                android:textAppearance="@style/TextBodyStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_backdrop_img"
                app:layout_constraintVertical_chainStyle="spread_inside"
                tools:text="@string/overview_placeholder"/>

            <TextView
                android:id="@+id/release_date_sub"
                style="@style/SubHeadersStyle"
                android:text="@string/release_date_sub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/movie_overview"
                app:layout_constraintEnd_toStartOf="@id/movie_release_date"/>

            <TextView
                android:id="@+id/movie_release_date"
                style="@style/MovieDetailsStyle"
                app:layout_constraintTop_toTopOf="@id/release_date_sub"
                app:layout_constraintStart_toEndOf="@id/release_date_sub"
                app:layout_constraintEnd_toEndOf="parent"
                android:gravity="start"
                tools:text="@string/release_date_placeholder"/>

            <TextView
                android:id="@+id/language_sub"
                style="@style/SubHeadersStyle"
                android:text="@string/languages_sub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/release_date_sub"/>

            <TextView
                android:id="@+id/movie_language"
                style="@style/MovieDetailsStyle"
                app:layout_constraintEnd_toEndOf="@id/movie_release_date"
                app:layout_constraintStart_toStartOf="@id/movie_release_date"
                app:layout_constraintTop_toBottomOf="@id/movie_release_date"
                android:gravity="start"
                tools:text="@string/languages_placeholder"/>

            <TextView
                android:id="@+id/budget_sub"
                style="@style/SubHeadersStyle"
                android:text="@string/budget_sub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/language_sub"/>

            <TextView
                android:id="@+id/movie_budget"
                style="@style/MovieDetailsStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/budget_sub"
                app:layout_constraintTop_toBottomOf="@id/movie_language"
                app:layout_constraintStart_toStartOf="@id/movie_release_date"
                android:gravity="start"
                tools:text="@string/budget_placeholder"/>

            <TextView
                android:id="@+id/revenue_sub"
                style="@style/SubHeadersStyle"
                android:text="@string/revenue_sub"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/budget_sub"/>

            <TextView
                android:id="@+id/movie_revenue"
                style="@style/MovieDetailsStyle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/revenue_sub"
                app:layout_constraintTop_toBottomOf="@id/movie_budget"
                app:layout_constraintStart_toStartOf="@id/movie_release_date"
                android:gravity="start"
                tools:text="@string/revenue_placeholder"/>

            <TextView
                android:id="@+id/link_header"
                style="@style/SubHeadersStyle"
                android:text="@string/link_header"
                app:layout_constraintTop_toBottomOf="@id/movie_revenue"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/homepage_link"
                style="@style/LinkStyle"
                android:text="@string/homepage_link"
                android:drawableEnd="@drawable/external_link"
                app:layout_constraintTop_toBottomOf="@id/link_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/imdb_link"
                style="@style/LinkStyle"
                android:drawableEnd="@drawable/external_link"
                app:layout_constraintTop_toBottomOf="@id/homepage_link"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tmdb_link"
                style="@style/LinkStyle"
                android:drawableEnd="@drawable/external_link"
                app:layout_constraintTop_toBottomOf="@id/imdb_link"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/view_placeholder"
                style="@style/MovieDetailsStyle"
                android:paddingBottom="200dp"
                android:paddingTop="200dp"
                android:layout_marginTop="200dp"
                android:layout_marginBottom="200dp"
                app:layout_constraintTop_toBottomOf="@id/tmdb_link"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
